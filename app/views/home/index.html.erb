<div class="discovery-header">
  <h1><%= t('discovery.title') %></h1>
  <p class="subtitle"><%= t('discovery.subtitle') %></p>
</div>

<!-- Search Form -->
<div class="search-form">
  <%= form_with url: "#", id: "search-form", local: false do |f| %>
    <div class="search-main">
      <div class="search-input-container">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
          <path d="m21 21-4.35-4.35" stroke="currentColor" stroke-width="2"/>
        </svg>
        <%= f.text_field :q, class: "form-control search-input", placeholder: t('discovery.search_placeholder') %>
        <button type="button" class="filter-toggle" onclick="toggleFilters()">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <line x1="4" y1="21" x2="4" y2="14" stroke="currentColor" stroke-width="2"/>
            <line x1="4" y1="10" x2="4" y2="3" stroke="currentColor" stroke-width="2"/>
            <line x1="12" y1="21" x2="12" y2="12" stroke="currentColor" stroke-width="2"/>
            <line x1="12" y1="8" x2="12" y2="3" stroke="currentColor" stroke-width="2"/>
            <line x1="20" y1="21" x2="20" y2="16" stroke="currentColor" stroke-width="2"/>
            <line x1="20" y1="12" x2="20" y2="3" stroke="currentColor" stroke-width="2"/>
            <line x1="1" y1="14" x2="7" y2="14" stroke="currentColor" stroke-width="2"/>
            <line x1="9" y1="8" x2="15" y2="8" stroke="currentColor" stroke-width="2"/>
            <line x1="17" y1="16" x2="23" y2="16" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span class="filter-text">فلاتر</span>
        </button>
      </div>
    </div>
    
    <div class="search-filters" id="filters-panel">
      <div class="filters-grid">
        <div class="filter-group">
          <%= f.select :kind, 
              options_for_select([
                [t('discovery.all_types'), ''], 
                [t('program_types.podcast'), 'podcast'], 
                [t('program_types.documentary'), 'documentary']
              ]), {}, { class: "filter-select", "data-label": t('discovery.content_type') } %>
        </div>
        
        <div class="filter-group">
          <%= f.select :language, 
              options_for_select([
                [t('discovery.all_languages'), ''], 
                [t('languages.ar'), 'ar'],
                [t('languages.en'), 'en']
              ]), {}, { class: "filter-select", "data-label": t('discovery.language') } %>
        </div>
        
        <div class="filter-group">
          <%= f.select :category, 
              options_for_select([
                [t('discovery.all_categories'), ''],
                [t('categories.technology'), 'Technology'], 
                [t('categories.education'), 'Education'],
                [t('categories.entertainment'), 'Entertainment'],
                [t('categories.news'), 'News'],
                [t('categories.sports'), 'Sports'],
                [t('categories.health'), 'Health'],
                [t('categories.business'), 'Business'],
                [t('categories.arts'), 'Arts']
              ]), {}, { class: "filter-select", "data-label": t('discovery.category') } %>
        </div>
        
        <div class="filter-actions">
          <button type="button" class="btn-clear" onclick="clearSearch()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="m18 6-12 12" stroke="currentColor" stroke-width="2"/>
              <path d="m6 6 12 12" stroke="currentColor" stroke-width="2"/>
            </svg>
            <%= t('common.clear_filters') %>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Search Results -->
<div id="search-results">
  <div class="results-header" style="display: none;">
    <h3 class="results-title"><%= t('discovery.results_title') %></h3>
    <span class="results-count"></span>
  </div>
  <div class="programs-grid">
    <!-- Initial programs will be loaded here -->
  </div>
  
  <div class="empty-results" style="display: none;">
    <div class="empty-icon">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="11" cy="11" r="8" stroke="#ADB5BD" stroke-width="2"/>
        <path d="m21 21-4.35-4.35" stroke="#ADB5BD" stroke-width="2"/>
      </svg>
    </div>
    <h3><%= t('discovery.no_results') %></h3>
    <p><%= t('discovery.no_results_hint') %></p>
  </div>
</div>

<!-- Video Player -->
<div id="player-container">
  <!-- Player will be inserted here when a program is selected -->
</div>

