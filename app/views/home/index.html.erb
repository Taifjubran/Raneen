<script>
  let currentPage = 1;
  let isLoading = false;
  
  document.addEventListener('DOMContentLoaded', function() {
    setupFormHandlers();
    loadPrograms();
  });
  
  function toggleFilters() {
    const filtersPanel = document.getElementById('filters-panel');
    const filterToggle = document.querySelector('.filter-toggle');
    
    filtersPanel.classList.toggle('expanded');
    filterToggle.classList.toggle('active');
  }
  
  function setupFormHandlers() {
    const form = document.getElementById('search-form');
    
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      e.stopPropagation();
      currentPage = 1;
      loadPrograms();
      return false;
    });
    
    const searchInput = form.querySelector('input[name="q"]');
    let searchTimeout;
    searchInput.addEventListener('input', function() {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        currentPage = 1;
        loadPrograms();
      }, 500);
    });
    const filters = form.querySelectorAll('.filter-select');
    filters.forEach(filter => {
      filter.addEventListener('change', function() {
        currentPage = 1;
        loadPrograms();
      });
    });
  }
  
  // Clear search filters
  function clearSearch() {
    const form = document.getElementById('search-form');
    form.reset();
    
    const filtersPanel = document.getElementById('filters-panel');
    const filterToggle = document.querySelector('.filter-toggle');
    filtersPanel.classList.remove('expanded');
    filterToggle.classList.remove('active');
    
    currentPage = 1;
    loadPrograms();
  }
  async function loadPrograms(append = false) {
    if (isLoading) return;
    
    isLoading = true;
    const form = document.getElementById('search-form');
    const formData = new FormData(form);
    const params = new URLSearchParams();
    
    for (const [key, value] of formData) {
      if (value.trim() !== '') {
        params.append(key, value);
      }
    }
    
    params.append('page', currentPage);
    params.append('per_page', 12);
    
    try {
      showLoadingState();
      
      const response = await fetch(`/api/discovery/programs?${params.toString()}`, {
        method: 'GET',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        }
      });
      
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const data = await response.json();
      displayPrograms(data.items, append);
      updateResultsHeader(data);
      
    } catch (error) {
      showErrorState();
    } finally {
      isLoading = false;
      hideLoadingState();
    }
  }
  
  function displayPrograms(programs, append = false) {
    const container = document.querySelector('.programs-grid');
    const resultsHeader = document.querySelector('.results-header');
    const emptyResults = document.querySelector('.empty-results');
    
    if (!append) {
      container.innerHTML = '';
    }
    
    if (programs.length === 0 && !append) {
      resultsHeader.style.display = 'none';
      emptyResults.style.display = 'block';
      return;
    }
    
    resultsHeader.style.display = 'flex';
    emptyResults.style.display = 'none';
    
    programs.forEach(program => {
      const programCard = createProgramCard(program);
      container.appendChild(programCard);
    });
  }
  
  function createProgramCard(program) {
    const card = document.createElement('div');
    card.className = 'program-card';
    card.onclick = () => playProgram(program);
    
    const cardThumbnail = document.createElement('div');
    cardThumbnail.className = 'card-thumbnail';
    
    if (program.thumbnail_url) {
      const img = document.createElement('img');
      img.src = program.thumbnail_url;
      img.alt = program.title;
      img.style.width = '100%';
      img.style.height = '100%';
      img.style.objectFit = 'cover';
      cardThumbnail.appendChild(img);
    } else {
      cardThumbnail.innerHTML = `
        <div class="placeholder" style="display: flex;">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
            <circle cx="8.5" cy="8.5" r="1.5" fill="currentColor"/>
            <polyline points="21,15 16,10 5,21" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>${program.kind}</span>
        </div>
      `;
    }
    
    const cardContent = document.createElement('div');
    cardContent.className = 'card-content';
    cardContent.innerHTML = `
      <h3 class="card-title">${program.title}</h3>
      <p class="card-description">${program.description ? program.description.substring(0, 120) + '...' : 'لا يوجد وصف متاح'}</p>
      <div class="card-meta">
        <span class="publish-date">${new Date(program.published_at).toLocaleDateString('ar-EG')}</span>
        ${program.category ? `<span class="category">${program.category}</span>` : ''}
      </div>
    `;
    
    card.appendChild(cardThumbnail);
    card.appendChild(cardContent);
    
    return card;
  }
  
  function updateResultsHeader(data) {
    const resultsCount = document.querySelector('.results-count');
    resultsCount.textContent = `${data.total} <%= t("discovery.results_found") || "results" %>`;
  }
  
  function showLoadingState() {
    const container = document.querySelector('.programs-grid');
    if (currentPage === 1) {
      container.innerHTML = '<div class="loading-placeholder"><%= t("common.loading") %></div>';
    }
  }
  
  function hideLoadingState() {
    const placeholder = document.querySelector('.loading-placeholder');
    if (placeholder) {
      placeholder.remove();
    }
  }
  
  function showErrorState() {
    const container = document.querySelector('.programs-grid');
    const emptyResults = document.querySelector('.empty-results');
    
    if (currentPage === 1) {
      container.innerHTML = '';
      emptyResults.style.display = 'block';
      emptyResults.querySelector('h3').textContent = 'حدث خطأ في تحميل البرامج';
      emptyResults.querySelector('p').textContent = 'يرجى المحاولة مرة أخرى';
    }
  }
  
  function playProgram(program) {
    // Create modal video player
    const modal = createVideoModal(program);
    document.body.appendChild(modal);
    
    setTimeout(() => {
      modal.classList.add('show');
    }, 10);
    
    document.addEventListener('keydown', handleModalKeydown);
    initializeVideoPlayer(program);
  }
  
  function createVideoModal(program) {
    const modal = document.createElement('div');
    modal.className = 'video-modal';
    modal.id = 'video-modal';
    
    modal.innerHTML = `
      <div class="video-modal-backdrop" onclick="closeVideoModal()"></div>
      <div class="video-modal-content">
        <div class="video-modal-header">
          <h3 class="video-title">${program.title}</h3>
          <button class="close-btn" onclick="closeVideoModal()">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2"/>
              <line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </div>
        <div class="video-container">
          <video 
            id="main-video-player" 
            controls 
            preload="metadata"
            poster="${program.thumbnail_url || ''}"
            class="video-player">
            <source src="${program.stream_url}" type="application/x-mpegURL">
            <p>Your browser doesn't support HLS video playback.</p>
          </video>
        </div>
        <div class="video-info">
          <p class="video-description">${program.description || 'لا يوجد وصف متاح'}</p>
          <div class="video-meta">
            <span class="video-category">${program.category || ''}</span>
            <span class="video-date">${new Date(program.published_at).toLocaleDateString('ar-EG')}</span>
          </div>
        </div>
      </div>
    `;
    
    return modal;
  }
  
  function initializeVideoPlayer(program) {
    const video = document.getElementById('main-video-player');
    
    if (!video) return;
    
    // Check if HLS is supported natively
    if (video.canPlayType('application/vnd.apple.mpegurl')) {
      video.src = program.stream_url;
    } else {
      if (typeof Hls !== 'undefined') {
        const hls = new Hls();
        hls.loadSource(program.stream_url);
        hls.attachMedia(video);
      } else {
        loadHlsJs().then(() => {
          if (typeof Hls !== 'undefined' && Hls.isSupported()) {
            const hls = new Hls();
            hls.loadSource(program.stream_url);
            hls.attachMedia(video);
          } else {
            video.src = program.stream_url;
          }
        });
      }
    }
    
    video.addEventListener('error', (e) => {
      showVideoError();
    });
  }
  
  function loadHlsJs() {
    return new Promise((resolve, reject) => {
      if (typeof Hls !== 'undefined') {
        resolve();
        return;
      }
      
      const script = document.createElement('script');
      script.src = 'https://cdn.jsdelivr.net/npm/hls.js@1.4.12/dist/hls.min.js';
      script.onload = resolve;
      script.onerror = reject;
      document.head.appendChild(script);
    });
  }
  
  function closeVideoModal() {
    const modal = document.getElementById('video-modal');
    if (modal) {
      const video = document.getElementById('main-video-player');
      if (video) {
        video.pause();
        video.src = '';
      }
      
      modal.classList.remove('show');
      setTimeout(() => {
        if (modal.parentNode) {
          document.body.removeChild(modal);
        }
      }, 300);
      
      document.removeEventListener('keydown', handleModalKeydown);
    }
  }
  
  function handleModalKeydown(event) {
    if (event.key === 'Escape') {
      closeVideoModal();
    }
  }
  
  function showVideoError() {
    const container = document.querySelector('.video-container');
    container.innerHTML = `
      <div class="video-error">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="12" cy="12" r="10" stroke="#DC3545" stroke-width="2"/>
          <line x1="15" y1="9" x2="9" y2="15" stroke="#DC3545" stroke-width="2"/>
          <line x1="9" y1="9" x2="15" y2="15" stroke="#DC3545" stroke-width="2"/>
        </svg>
        <h3>خطأ في تشغيل الفيديو</h3>
        <p>عذراً، لا يمكن تشغيل هذا الفيديو في الوقت الحالي</p>
      </div>
    `;
  }
</script>
